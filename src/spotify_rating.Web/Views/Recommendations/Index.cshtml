@model RecommendationsViewModel
@{
    ViewData["Title"] = "spotify_rating";
}

<div class="card shadow-lg container my-5 col-lg-6 col-md-8 col-sm-10">
    <div class="p-5">
        <h3 class="mb-4 text-center">AI Recommendations</h3>
        <div class="list-group">
            @foreach (var recommendation in Model.Recommendations)
            {
                <div class="list-group-item list-group-item-action d-flex gap-3 py-3 align-items-center">

                    <p>@recommendation.Artist</p>
                    <p>@recommendation.Genre</p>
                    <p>@recommendation.Reason</p>
                    <p>@recommendation.Title</p>
                </div>
            }
        </div>
    </div>
</div>