@using spotify_rating.Data.Enums
@model List<Track>
@{
    ViewData["Title"] = "spotify_rating";
}

<div class="card shadow-lg container my-5 col-lg-6 col-md-8 col-sm-10">
    <div class="p-5">
        <h3 class="mb-4 text-center">All Tracks</h3>
        <div class="list-group">
            @foreach (var track in Model.OrderByDescending(r => r.RatedAtUtc))
            {
                <div class="list-group-item list-group-item-action d-flex gap-3 py-3 align-items-center">
                    <img src="@track.SpotifyAlbumCoverUrl" class="rounded shadow-sm" style="width: 64px; height: 64px; object-fit: cover;" alt="Cover" />
                    <div class="flex-fill">
                        <div class="fw-semibold">@track.Title</div>
                        <div>@track.Artist</div>
                    </div>
                    @if (track.Rating == TrackRating.LIKE)
                    {
                        <span class="badge bg-success">@track.Rating.ToString()</span>
                    }
                    @if (track.Rating == TrackRating.SUPER_LIKE)
                    {
                        <span class="badge bg-info">@track.Rating.ToString()</span>
                    }
                    @if (track.Rating == TrackRating.DISLIKE)
                    {
                        <span class="badge bg-danger">@track.Rating.ToString()</span>
                    }
                </div>
            }
        </div>
    </div>
</div>