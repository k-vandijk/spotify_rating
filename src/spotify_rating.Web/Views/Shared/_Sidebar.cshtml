@{
    var path = Context.Request.Path.ToString().ToLower();
}

<div class="sidebar d-flex flex-column flex-shrink-0 p-3 min-vh-100" style="width: 280px;">
    <ul class="nav nav-pills flex-column mb-auto">

        <!-- Home -->
        <li class="nav-item">
            <a href="/" class="nav-link @(path == "/" ? "active" : "")">
                <i class="fa-solid fa-house me-1"></i> Home
            </a>
        </li>

        <!-- Rating History -->
        <li class="nav-item">
            <a href="/history" class="nav-link @(path.StartsWith("/history") ? "active" : "")">
                <i class="fa-solid fa-clock-rotate-left me-1"></i> Rating History
            </a>
        </li>

        <!-- Recommendations -->
        <li class="nav-item">
            <a href="/recommendations" class="nav-link @(path.StartsWith("/recommendations") ? "active" : "")">
                <i class="fa-solid fa-robot me-1"></i> AI Recommendations
            </a>
        </li>

        <!-- Theme Toggle (non-navigational) -->
        <li class="nav-item">
            <button id="btnToggleTheme" class="nav-link">
                <i id="themeIcon" class="fa-solid fa-circle-half-stroke me-1"></i>> Toggle Theme
            </button>
        </li>
    </ul>
</div>