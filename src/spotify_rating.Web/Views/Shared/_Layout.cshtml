@using Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <partial name="_Styles" />
</head>
<body>
    @if (TempData["HideLayout"] == "true")
    {
        @RenderBody()
    }

    else
    {
        <partial name="Components/_MobileNav" />
        <div class="d-flex">
            <div class="d-none d-md-block position-sticky top-0" style="height: 100vh;">
                <partial name="Components/_DesktopNav" />
            </div>
            <main class="flex-grow-1 w-100">
                <partial name="Components/_DesktopNavBreadcrumb" />
                @RenderBody()
            </main>
        </div>
    }
    <partial name="_Scripts" />
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>